@using System.Globalization

<h5>Test Result Explorer</h5>
<div class="mb-2">
    <input class="form-control w-auto d-inline-block" style="width:200px" placeholder="Filter by plan..." @bind="Filter" />
    <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ExportCsv">Export CSV</button>
    <button class="btn btn-sm btn-outline-primary ms-2" @onclick="RefreshData">Refresh</button>
</div>
@if (Results.Count == 0)
{
    <div>No results found.</div>
}
else
{
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Plan</th>
                <th>Run Date</th>
                <th>Status</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in FilteredResults)
            {
                <tr>
                    <td>@r.PlanName</td>
                    <td>@r.RunDate.ToString("g", CultureInfo.CurrentCulture)</td>
                    <td>@r.Status</td>
                    <td><button class="btn btn-sm btn-link" @onclick="() => ShowDetails(r)">View</button></td>
                    <td><button class="btn btn-sm btn-danger" @onclick="() => DeleteResult(r)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@if (SelectedResult != null)
{
    <div class="alert alert-info mt-3">
        <b>Result Details:</b><br />
        <b>Plan:</b> @SelectedResult.PlanName<br />
        <b>Date:</b> @SelectedResult.RunDate.ToString("f", CultureInfo.CurrentCulture)<br />
        <b>Status:</b> @SelectedResult.Status<br />
        <b>Summary:</b> @SelectedResult.Summary
        <button class="btn btn-sm btn-secondary ms-2" @onclick="() => SelectedResult = null">Close</button>
    </div>
}

@code {
    private string Filter = string.Empty;
    private List<Result> Results = new();
    private Result? SelectedResult;
    private IEnumerable<Result> FilteredResults => string.IsNullOrWhiteSpace(Filter)
        ? Results
        : Results.Where(r => r.PlanName.Contains(Filter, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
    }

    [Inject] private IHttpClientFactory HttpFactory { get; set; } = default!;

    private async Task RefreshData()
    {
        try
        {
            var client = HttpFactory.CreateClient("Api");
            var runs = await client.GetFromJsonAsync<List<TestRunDto>>("api/testruns");
            Results = runs?.Select(r => new Result
            {
                Id = r.Id, // Set the Id so delete works
                PlanName = r.PlanName,
                RunDate = r.StartedAt.ToLocalTime(),
                Status = r.EndedAt == null ? "Running" : (r.Results.All(x => x.Passed) ? "Passed" : "Failed"),
                Summary = $"{r.Results.Count(x => x.Passed)} passed, {r.Results.Count(x => !x.Passed)} failed"
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Failed to load test results: {ex.Message}");
            Results = new();
        }
    }

    public class TestRunDto
    {
        public Guid Id { get; set; }
        public string PlanName { get; set; } = string.Empty;
        public DateTime StartedAt { get; set; }
        public DateTime? EndedAt { get; set; }
        public List<TestResultDto> Results { get; set; } = new();
    }
    public class TestResultDto
    {
        public bool Passed { get; set; }
    }

    private void ShowDetails(Result r)
    {
        SelectedResult = r;
    }

    private void ExportCsv()
    {
        // TODO: Implement CSV export (browser download)
        // For now, just show an alert
        Console.WriteLine("Export CSV clicked");
    }

    public class Result
    {
        public Guid Id { get; set; }
        public string PlanName { get; set; } = string.Empty;
        public DateTime RunDate { get; set; }
        public string Status { get; set; } = string.Empty;
        public string Summary { get; set; } = string.Empty;
    }
    private async Task DeleteResult(Result r)
    {
        if (r == null || r.Id == Guid.Empty)
            return;
        try
        {
            var client = HttpFactory.CreateClient("Api");
            var resp = await client.DeleteAsync($"api/testruns/{r.Id}");
            if (resp.IsSuccessStatusCode)
            {
                await RefreshData();
            }
            else
            {
                Console.Error.WriteLine($"Failed to delete test run: {resp.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Exception deleting test run: {ex.Message}");
        }
    }
}
