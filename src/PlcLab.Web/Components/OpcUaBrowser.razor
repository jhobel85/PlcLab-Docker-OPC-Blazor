@using Opc.Ua
@using Opc.Ua.Client
@using PlcLab.OPC
@using PlcLab.Web.ViewModel
@inject IOpcUaClientFactory UaFactory

@if (ViewModel?.Session == null)
{
    <div class="alert alert-warning">Not connected to OPC UA server.</div>
}
else
{
    <div>
        <h5>OPC UA Browser</h5>
        <button class="btn btn-sm btn-outline-primary mb-2" @onclick="LoadRoot">Browse Root</button>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }
        @if (RootNodes == null)
        {
            <div>Loading...</div>
        }
        else
        {
            <ul>
                @foreach (var node in RootNodes)
                {
                    <li>
                        <span @onclick="() => OnNodeClick(node)" style="cursor:pointer;">@node.DisplayName.Text</span>
                        @if (SelectedNode == node)
                        {
                            <div class="ms-3">
                                <b>NodeId:</b> @node.NodeId <br />
                                <b>BrowseName:</b> @node.BrowseName <br />
                                <b>NodeClass:</b> @node.NodeClass <br />
                                <button class="btn btn-sm btn-secondary mt-1" @onclick="() => LoadChildren(node)">Browse Children</button>
                                @if (ChildNodes != null)
                                {
                                    <ul>
                                        @foreach (var child in ChildNodes)
                                        {
                                            <li>
                                                <span @onclick="() => OnNodeClick(child)" style="cursor:pointer;">@child.DisplayName.Text</span>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        }
                    </li>
                }
            </ul>
        }
    </div>
}

@code {
    [Parameter] public IndexViewModel? ViewModel { get; set; }

    private ReferenceDescriptionCollection? RootNodes;
    private ReferenceDescriptionCollection? ChildNodes;
    private ReferenceDescription? SelectedNode;
    private string? ErrorMessage;
    private Session? _prevSession;

    protected override void OnInitialized()
    {
        if (ViewModel != null)
        {
            ViewModel.StatusChanged += OnStatusChanged;
        }
    }

    private async void OnStatusChanged()
    {
        var session = ViewModel?.Session;
        if (session != _prevSession)
        {
            _prevSession = session;
            if (session != null)
            {
                await LoadRoot();
            }
            else
            {
                RootNodes = null;
                ChildNodes = null;
                SelectedNode = null;
            }
        }
        StateHasChanged();
    }

    protected override async Task OnParametersSetAsync()
    {
        var session = ViewModel?.Session;
        if (session != _prevSession)
        {
            _prevSession = session;
            if (session != null)
            {
                await LoadRoot();
            }
            else
            {
                RootNodes = null;
                ChildNodes = null;
                SelectedNode = null;
            }
        }
    }

    private async Task LoadRoot()
    {
        ErrorMessage = null;
        var session = ViewModel?.Session;
        if (session == null) return;
        try
        {
            RootNodes = await UaFactory.BrowseAsync(session, ObjectIds.ObjectsFolder);
            SelectedNode = null;
            ChildNodes = null;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Browse Root failed: {ex.GetType().Name} - {ex.Message}";
        }
        StateHasChanged();
    }

    private async Task LoadChildren(ReferenceDescription node)
    {
        ErrorMessage = null;
        var session = ViewModel?.Session;
        if (session == null) return;
        try
        {
            var nodeId = ExpandedNodeId.ToNodeId(node.NodeId, session.NamespaceUris);
            ChildNodes = await UaFactory.BrowseAsync(session, nodeId);
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Browse Children failed: {ex.GetType().Name} - {ex.Message}";
        }
        StateHasChanged();
    }

    private void OnNodeClick(ReferenceDescription node)
    {
        SelectedNode = node;
        ChildNodes = null;
    }
}
